.search {
    height: 85rpx;
    background-color: white;
    color: #7D7D7D;
    display: flex;
    justify-content: center;
    align-items: center;
}

.search image {
    width: 35rpx;
    height: 35rpx;
}

.search text {
    font-size: 30rpx;
    margin-left: 10rpx;
}

.index {
    background-color: white;
    margin-top: 10rpx;
    display: flex;
    flex-direction: column;
}

.index-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #474E5B;
    margin: 15rpx 0rpx 10rpx 25rpx;
}

.index-area {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}

.index-item {
    width: 33.33%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 20rpx;
}

.index-item .value {
    font-size: 38rpx;
    font-weight: bold;
    color: #DB3439;
}

.index-item .updown {
    font-size: 24rpx;
    font-weight: bold;
    color: #DB3439;
}